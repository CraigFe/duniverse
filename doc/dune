(rule
 (targets duniverse.1)
 (action (with-stdout-to %{targets} (run ../src/duniverse.exe --help --pager=none))))

(rule
 (targets duniverse-git-pull.1)
 (action (with-stdout-to %{targets} (run ../src/duniverse.exe git-pull --help --pager=none))))

(rule
 (targets duniverse-git-merge.1)
 (action (with-stdout-to %{targets} (run ../src/duniverse.exe git-merge --help --pager=none))))

(rule
 (targets duniverse-git-lock.1)
 (action (with-stdout-to %{targets} (run ../src/duniverse.exe git-lock --help --pager=none))))

(rule
 (targets duniverse-status.1)
 (action (with-stdout-to %{targets} (run ../src/duniverse.exe status --help --pager=none))))

(executable
 (name gen_readme)
 (libraries bos rresult))

(rule
 (targets usage.md)
 (deps header.md duniverse.1 duniverse-git-lock.1 duniverse-git-pull.1 duniverse-status.1)
 (mode promote)
 (action (with-stdout-to %{targets} (run ./gen_readme.exe duniverse duniverse-git-lock duniverse-git-pull duniverse-status))))
